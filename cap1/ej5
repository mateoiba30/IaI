programa Cap2Ejemplo3
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  comenzar 
    Pos(7, 50)
    si HayFlorEnLaEsquina
      tomarFlor
    Pos(8, 51)
    si HayFlorEnLaEsquina
      tomarFlor
    Informar
  fin
variables
  Rinfo: robot1
comenzar
  AsignarArea(Rinfo,ciudad)
  Iniciar(Rinfo,1,1)
fin
